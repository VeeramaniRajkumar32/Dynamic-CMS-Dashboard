

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../partials/sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <%- include('../partials/header.ejs') %>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Slider</h1>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary text-center">
                                <strong>
                                    <% if (locals.errMsg){ %> 
                                        <%= errMsg %> 
                                      <% } %> 
                                </strong>
                            </h6>
                        </div>
                        <div class="card-body">
                            <form method="post" action="/sliderForm" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-12 mb-3">
                                      <label for="recipient-name" class="col-form-label">Back Image:</label>
                                      <input type="file" class="form-control" name="image" id="recipient-name" multiple >
                                    </div>
                                    <div class="col-sm-12 mb-3 d-flex justify-content-end" >
                                      <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </form>
                              <h4 class="m-0 font-weight-bold text-primary text-center">Images</h4><br>
                              <div class="row">
                                <% data.forEach((item,index) => { %>
                                <div class="col-sm-3 mb-3 text-center">
                                  <label for="recipient-name" class="col-form-label"><%=item.image %></label><br>
                                  <img src="/uploads/Slider/<%=item.image %>" alt="<%= item.image %>" id="<%=item.id %>" style="height: 70px; width: 100px;"><br>
                                  <a href="slider/<%=item.id %>" id="<%=item.index %>" class="btn btn-danger">Remove</a>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <%- include('../partials/footer.ejs') %> 
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

